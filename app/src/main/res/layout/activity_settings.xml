<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:scrollbars="none"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
    android:id="@+id/back"
    android:layout_width="0sp"
    android:layout_height="0sp"
    android:onClick="onBack"
    android:text="Back!" />

        <TextView
            android:paddingTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User settings:"
            android:gravity="left"
            android:textSize="20sp"
            android:paddingBottom="10sp"
            android:layout_gravity="left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth:"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="DD/MM/YYYY"
            android:inputType="date"
            android:paddingTop="2sp" />

        <Switch
            android:id="@+id/mapLocationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Show my location on map" />

        <Switch
            android:id="@+id/sortUsersByDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Sort users by distance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="10sp">

            <Button
                android:id="@+id/restartMatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:background="@drawable/rounded_button"
                android:text="Restart matches" />


            <Button
                android:id="@+id/logoutUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10sp"
                android:background="@drawable/rounded_button"
                android:text="SignOut"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>

            <Button
                android:id="@+id/deleteUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="50sp"
                android:background="@drawable/rounded_button"
                android:text="Delete account"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center|bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legal information:"
                android:gravity="left"
                android:textSize="20sp"
                android:paddingBottom="10sp"
                android:layout_gravity="left"
                />

            <Button
                android:id="@+id/privacyPolicyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:background="@drawable/rounded_button"
                android:text="Privacy policy"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>


            <Button
                android:id="@+id/termsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:background="@drawable/rounded_button"
                android:text="Terms &amp; Conditinons"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>


            <Button
            android:id="@+id/licenceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Licence"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="20sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>

            <ImageView
                android:id="@+id/tags"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/login_photo"
                android:text="Tags" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version: 1.0"
                android:gravity="top"
                android:paddingBottom="20sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>