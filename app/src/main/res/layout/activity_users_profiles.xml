<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:paddingTop="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.pinder.app.UsersProfilesActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:layout_gravity="top"
                android:layout_weight="20"
                android:orientation="horizontal"
                android:paddingBottom="5sp">

                <ProgressBar
                    android:id="@+id/user_progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleX="0.2"
                    android:scaleY="0.2" />

                <ImageView
                    android:id="@+id/default_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_profile_hq" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="500sp" />


                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17sp"
                    android:paddingLeft="21sp"
                    android:paddingRight="10sp"
                    android:scaleX="1.25"
                    android:scaleY="1.25"
                    app:srcCompat="@drawable/ic_back_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        tools:text="name" />

                    <ImageView
                        android:id="@+id/reportUserImage"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="5sp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/ic_report" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/locationimage"
                        android:layout_width="20sp"
                        android:layout_height="27sp"
                        android:layout_marginRight="5sp"
                        android:src="@drawable/user_profile_location" />

                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        tools:text="location" />

                    <TextView
                        android:id="@+id/distanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        tools:text="distance:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/genderimage"
                        android:layout_width="20sp"
                        android:layout_height="27sp"
                        android:layout_marginRight="5sp"
                        android:src="@drawable/user_profile_gender" />

                    <TextView
                        android:id="@+id/genderTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        tools:text="gender" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tagsimage"
                        android:layout_width="20sp"
                        android:layout_height="27sp"
                        android:layout_marginRight="5sp"
                        android:src="@drawable/user_profile_tags" />

                    <TextView
                        android:id="@+id/tagsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        tools:text="Mutual tags" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:background="#EEEAEAEA" />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="100sp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:text="description" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/unmatchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="100sp"
            android:background="@drawable/rounded_button"
            android:text="unmatch"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10sp">

            <ImageView
                android:id="@+id/dislikeButton"
                android:layout_width="20sp"
                android:layout_height="75sp"
                android:layout_weight="1"
                android:paddingLeft="50sp"
                android:text="DISLIKE"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_dislike" />

            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="20sp"
                android:layout_height="75sp"
                android:layout_weight="1"
                android:paddingRight="50sp"
                android:text="LIKE"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_like" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>